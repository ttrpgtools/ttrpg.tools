---
import { getCollection } from "astro:content";
import Base from "$layout/Base.astro";
import Section from "$part/Section.astro";
const allPosts = await getCollection("blog");
const allProjects = await getCollection("projects");
const allResources = await getCollection("resources");
const postTags = allPosts.map((post) => post.data.tags).flat();
const projTags = allProjects.map((proj) => proj.data.tags).flat();
const resourceTags = allResources.map((resource) => resource.data.tags).flat();
const tags = postTags
    .concat(projTags)
    .concat(resourceTags)
    .toSorted()
    .reduce(
        (p, c) => {
            p[c] = (p[c] ?? 0) + 1;
            return p;
        },
        {} as Record<string, number>,
    );
const pageTitle = "Tag Index";
---

<Base
    head={{
        title: pageTitle,
        description:
            "A list of all tags used in my blog posts, projects, and resources.",
    }}
>
    <Section>
        <section aria-labelledby="header" class="relative overflow-hidden">
            <div class="overflow-hidden relative">
                <div class="px-8 mx-auto max-w-7xl mb-6">
                    <h1
                        class="text-white mt-4 font-semibold text-3xl lg:text-4xl tracking-tighter font-serif"
                    >
                        All tags
                    </h1>
                </div>
            </div>
        </section>
        <section>
            <div class="px-8 mx-auto max-w-7xl">
                <div class="flex flex-wrap gap-5">
                    {
                        Object.entries(tags).map(([tag, count]) => (
                            <a
                                class="isolate inline-flex rounded-md group"
                                href={`/tag/${tag}`}
                            >
                                <span class="relative inline-flex items-center gap-x-1.5 rounded-l-md bg-gray-800 px-3 py-1.5 text-lg font-semibold text-gray-100 group-hover:text-emerald-300 ring-1 ring-inset ring-gray-300 group-hover:ring-emerald-300 group-hover:bg-gray-900 focus:z-10">
                                    <svg
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                        class="-ml-0.5 w-5 h-5 text-gray-400 group-hover:text-emerald-500/70"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M4.5 2A2.5 2.5 0 0 0 2 4.5v3.879a2.5 2.5 0 0 0 .732 1.767l7.5 7.5a2.5 2.5 0 0 0 3.536 0l3.878-3.878a2.5 2.5 0 0 0 0-3.536l-7.5-7.5A2.5 2.5 0 0 0 8.38 2H4.5ZM5 6a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>

                                    {tag}
                                </span>
                                <span class="relative -ml-px inline-flex items-center rounded-r-md bg-gray-800 px-3 py-1.5 text-lg font-semibold text-gray-100 group-hover:text-emerald-300 ring-1 ring-inset ring-gray-300 group-hover:ring-emerald-300 group-hover:bg-gray-900 focus:z-10">
                                    {count}
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>
    </Section>
</Base>
