---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
---
<div class="bg-zinc-800 rounded-lg p-4 flex flex-row gap-8 items-center">
  <slot name="icon"></slot>
  <div class="flex flex-col gap-2">
    <h3 class="text-xl"><a href={url} class="text-blue-300 hover:underline">{title}</a></h3>
    <slot></slot>
  </div>
</div>