{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$comp/*": ["./src/lib/components/*"],
      "$part/*": ["./src/lib/partials/*"],
      "$util/*": ["./src/lib/util/*"],
      "$asset/*": ["./src/assets/*"],
      "$layout/*": ["./src/lib/layout/*"]
    }
  }
}